Acrobat.merge {
    meta {
        name "Acrobat"
        description "A highly mobile warrior that bounces, leaps, and uses their momentum against enemies."
    }

    innate_items {
        weapon SpringShoes
        trinket LuckyCoin 
    }

    graphics {
        palette 52

        alt_animations [
            [idle, FighterIdle]
            [ClassToNeutral,   FighterToNeutral]
            [ClassFromNeutral, FighterFromNeutral]
            [StartTurn, FighterStartTurn]
            [Victory, fighterVictory]
        ]
    }

    attack_pool [
        BasicMelee_Acrobat
    ]

    ability_pool [
       AcrobatLeap
       AcrobatBounce
       AcrobatSpring
       AcrobatDive
       AcrobatKick
       AcrobatDash
    ]

    complicated_abilities [
       AcrobatDive
       AcrobatBounce
    ]

    starter_abilities [  
        AcrobatLeap
        AcrobatSpring
    ]

    ability_groups {
        attack [ AcrobatDive AcrobatKick ]
        move [ AcrobatLeap AcrobatBounce AcrobatSpring AcrobatDash ] 
        misc [ ] 
    }
    
    passive_pool [
        Passive_Acrobatics
        Passive_Lightfoot
        Passive_SpringHeel
    ]

    complicated_passives [
       Passive_SpringHeel
    ]

    stat_mods {
        str 1
        con 1
        int 1
        spd 2
    }

    levelup_stats [str spd spd]
}